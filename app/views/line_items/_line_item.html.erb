<% if line_item == @current_item %>
	<tr class="line-item-highlight">
<% else %>
	<tr>
<% end %>
<td class="text-right"><%= line_item.quantity %></td>
<td>&times;</td>
<td class="pr-2 min-w-40"><%= line_item.product.name %></td>
<td class="text-right font-bold"><%= number_to_currency(line_item.total_price) %></td>
<% if show_button == true %>
	<td><%= button_to "-", decrease_quantity_line_item_path(line_item), method: :patch, class: "rounded-lg px-2 py-1 ml-2 border" %></td>
	<td><%= button_to "Remove", line_item, method: :delete, class: "rounded-lg py-1 px-2 ml-2 text-white bg-red-600" %></td>
<% end %>
</tr>
