<div class="w-full">
	<% content_for :title, "Carts" %>

	<div class="flex justify-between items-center">
		<h1 class="font-bold text-4xl">Carts</h1>
		<%= link_to "New cart", new_cart_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
	</div>

	<div id="carts" class="min-w-full">
		<% @carts.each do |cart| %>
			<%= render cart %>
			<p>
				<%= link_to "Show this cart", cart, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
			</p>
		<% end %>
	</div>
</div>
