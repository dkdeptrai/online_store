<div class="w-full">
	<h1><%= t('.title_html') %></h1>
	<%= turbo_stream_from 'products' %>

	<p class="my-4"><%= raw t(('.counter'), count: session[:counter]) %></p>

	<ul>
		<%= cache @products do %>
			<% @products.each do |product| %>
				<%= cache product do %>
					<%= render partial: 'product', object: product %>
				<% end %>
			<% end %>
		<% end %>
	</ul>
</div>

