<%= turbo_frame_tag(dom_id(product)) do %>
	<div class="flex flex-row items-center gap-4 w-60 h-40">
		<%= image_tag(product.images.first.nil? ? asset_path("image-broken.svg") : product.images.first.url, class: "object-center size-24") %>

		<div class="flex flex-col">
			<h3 class="text-sm"><%= product.name %></h3>
			<p><%= product.brand.name %></p>
			<p><%= product.category.name %></p>
			<div class="mt-3 flex flex-row justify-between items-center">
				<p class=""><%= number_to_currency(product.price) %></p>
				<%= button_to image_tag(asset_path("add-to-cart.svg"), class: "object-center size-4"),
				              line_items_path(product_id: product),
				              form_class: "inline",
				              class: "ml-4 rounded-lg py-1 px-2 bg-green-600 text-white " %>
			</div>


		</div>
	</div>

<% end %>
